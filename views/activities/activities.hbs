<div id="activities">
  <h2>Based on your profile, here are 3 activities you could like.</h2>

  {{#each activities}}
    <div class="activity-card">

      <div id="image">
        <img src="{{this.image}}" alt="{{this.name}} image" />
        <img src="/images/activities/info-btn.svg" alt="" />
      </div>
      
      <p>{{this.name}}</p>
      <p id="card-id">{{this._id}}</p>
      <p>{{this.location}}</p>

      <div id="tags">
        <span>{{this.tags.[0]}}</span>
        <span>{{this.tags.[1]}}</span>
      </div>

      <div id="match-percentage">
        <p><span>{{this.matchPercentage}}</span>% match</p>
      </div>

    </div>
  {{/each}}

  <div id="button">
    <img src="/images/activities/refresh-btn.svg" alt="" />
  </div>

</div>